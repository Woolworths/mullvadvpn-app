{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/*.json",

    "./src/main/**/*.js",
    "./src/main/**/*.ts",

    "./src/renderer/**/*.js",
    "./src/renderer/**/*.ts",
    "./src/renderer/**/*.tsx",

    "./src/common/**/*.js",
    "./src/common/**/*.ts",
    "./src/common/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
